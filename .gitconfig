# http://oli.jp/2012/git-powerup
# http://mislav.uniqpath.com/2010/07/git-tips
# http://jeremyherve.com/2012/09/23/my-gitconfig-file
# http://git-scm.com/book/en/Git-Basics-Tips-and-Tricks
# https://stackoverflow.com/questions/179123/how-do-i-edit-an-incorrect-commit-message-in-git

[user]
	name = Kian-Meng, Ang
	email = kianmeng@users.noreply.github.com

[alias]
    # common
    co = checkout
    br = branch
	ci = commit
    cm = commit -m
    df = diff --word-diff

    # edit/view this config file
    cf = config --list --global
    ed = config --global --edit

    # always rebase, no merging
    ft = fetch
    pl = pull
    pr = pull --rebase
    ps = push

    url = remote -v

    # status
    ss = status -sb
    st = status

    # colourful log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --oneline --decorate --graph --all
    lla = log --oneline --decorate --graph -n 15 --all
    stat-by-author = shortlog -sn
    
    # opss, undo
    reword = commit --amend
	unstage = reset HEAD --

    # push
    pom = push origin master
    pos = push origin source # octopress

    # when i last did something?
    last = log -1 HEAD
    last-fix = show :/fix
    last-merge = show :/^Merge

[color]
    branch = auto
    diff = auto
    status = auto
	ui = auto
    interactive = auto

[core]
	whitespace = trailing-space,space-before-tab
    editor = vim

[merge]
	tool = meld
